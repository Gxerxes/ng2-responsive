{
  "compilerOptions": {
    "target": "es5",
    "watch": true,
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors":true,
    "experimentalDecorators": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": false
  },
   "compileOnSave": true,
  "files": [
        "main.ts",
        "components/app.component.ts",
        "dev/index.ts",
        "dev/config/config.ts",
        "dev/config/const.ts",
        "dev/config/interfaces.ts",
        "dev/config/responsive-base.ts",
        "dev/bootstrap/bootstrap-directives.ts",
        "dev/browsers/browsers-directives.ts",
        "dev/custom-sizes/custom-sizes-directives.ts",
        "dev/devices/devices-directives.ts",
        "dev/pixelratio/pixelratio-directives.ts",
        "dev/responsive/responsive.ts",
        "dev/responsive-css/responsive-css.ts",
        "dev/responsive-window/responsive-window.ts",
        "dev/useragent/useragent.ts",
        "dev/webp/webp.ts"
    ],
  "exclude": [
    "node_modules",
    "typings/index",
    "typings/index.d.ts"
  ]
}